{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "laravel-boost": {
      "type": "local",
      "command": ["docker", "exec", "-i", "larastack-app-1", "php", "/var/www/html/artisan", "boost:mcp"],
      "enabled": true
    },
    "ark-ui": {
      "type": "local",
      "command": ["npx", "-y", "@ark-ui/mcp"],
      "enabled": true
    },
    "panda": {
      "type": "local",
      "command": ["pnpm", "--filter", "frontend", "exec", "panda", "mcp"],
      "enabled": true
    }
  }
}
